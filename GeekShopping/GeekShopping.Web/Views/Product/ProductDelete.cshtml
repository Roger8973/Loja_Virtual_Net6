@model GeekShopping.Web.Models.ProductModel

<form asp-action="ProductDelete">
    <input asp-for="Id" hidden />
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Deletar Produto</h1>

        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <h4 class="form-text">Nome</h4>            
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />              
            </div>

            <div class="col-2">
                <h4 class="form-text">Preço</h4>            
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" disabled class="form-control" />         
            </div>

            <div class="col-2">
                <h4 class="form-text">Descrição</h4>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" disabled class="form-control" />           
            </div>

            <div class="col-2">
                <h4 class="form-text">Nome da Categoria</h4>            
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <h4 class="form-text">Imagem Url</h4>              
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageURL" disabled class="form-control" />         
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control">Retornar para Lista</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
 }